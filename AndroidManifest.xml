<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.quantumbadger.redreader"
          android:versionCode="43"
          android:versionName="2.0.0_a01"
          android:installLocation="auto">

    <uses-sdk
            android:minSdkVersion="8"
            android:targetSdkVersion="16"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>

    <application
            android:name="org.quantumbadger.redreader.RedReader"
            android:icon="@drawable/icon"
            android:label="@string/app_name"
            android:theme="@style/RR.Startup"
            android:largeHeap="true"
            android:hardwareAccelerated="true"
            android:allowBackup="true">

        <activity
                android:name=".activities.MainActivity"
                android:configChanges="orientation|screenSize|keyboardHidden"
                android:clearTaskOnLaunch="false"
                android:finishOnTaskLaunch="false">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.MULTIWINDOW_LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity
                android:name=".activities.BugReportActivity"
                android:configChanges="orientation|screenSize|keyboardHidden"
                android:theme="@style/Holo.Theme"
                android:launchMode="singleInstance"/>

        <uses-library
                android:required="false"
                android:name="com.sec.android.app.multiwindow"/>

        <meta-data
                android:name="com.sec.android.support.multiwindow"
                android:value="true"/>

        <meta-data
                android:name="com.sec.android.multiwindow.DEFAULT_SIZE_W"
                android:resource="@dimen/app_defaultsize_w"/>
        <meta-data
                android:name="com.sec.android.multiwindow.DEFAULT_SIZE_H"
                android:resource="@dimen/app_defaultsize_h"/>
        <meta-data
                android:name="com.sec.android.multiwindow.MINIMUM_SIZE_W"
                android:resource="@dimen/app_minimumsize_w"/>
        <meta-data
                android:name="com.sec.android.multiwindow.MINIMUM_SIZE_H"
                android:resource="@dimen/app_minimumsize_h"/>


        <receiver
                android:name=".widgets.SubredditWidgetProvider"
                android:icon="@drawable/icon"
                android:label="Subreddit Widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/widget_subreddit"/>
        </receiver>
        <receiver
                android:name=".common.AutostartReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <activity android:name=".widgets.SubredditWidgetConfigure">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.RedditAuthenticatorActivity" android:label="Reddit"/>
        <service android:name=".account.RedditAccountService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>
            <meta-data android:name="android.accounts.AccountAuthenticator"
                       android:resource="@xml/reddit_authenticator" />
        </service>

        <service
            android:name=".sync.MessageSyncService"
            android:exported="true"
            android:process=":sync">
            <intent-filter>com.example.android.datasync.provider
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>
            <meta-data android:name="android.content.SyncAdapter"
                       android:resource="@xml/sync_message" />
        </service>

        <provider
            android:name=".sync.StubContentProvider"
            android:authorities="org.quantumbadger.redreader.provider"
            android:exported="false"
            android:syncable="true"/>

    </application>

</manifest>

